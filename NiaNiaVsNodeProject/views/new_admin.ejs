<% include __header.ejs%>
<% include admin_menu.ejs%>

<h1>Add new admin</h1>

<div>

    <form action="/signup" method="post" style='width:40%;'>

        <input name="username" type="text" maxlength="25" class="form-control" placeholder="Username" required autofocus style='margin-bottom: 10px;'>

        <input name="password" type="password"  min="0" maxlength="16" class="form-control" placeholder="Password" required style='margin-bottom: 10px;'>

        <input name="first_name" type="text" min="0" maxlength="40" class="form-control" placeholder="First name" required style='margin-bottom: 10px;'>

        <input name="last_name" type="text" min="0" maxlength="40" class="form-control" placeholder="Last name" required style='margin-bottom: 10px;'>

        <input name="role" type="text" min="0" maxlength="40" class="form-control" value="admin" readonly required style='margin-bottom: 10px;'>

        <input type="submit" value="Add" class="btn btn-primary btn-block">

    </form>

</div>
