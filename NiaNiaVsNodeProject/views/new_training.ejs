<% include __header.ejs%>

<h1>Add new training</h1>

<div>

    <form action="/admin/new_training" method="post" style='width:40%;'>

        <input name="name" type="text" maxlength="25" class="form-control" placeholder="Name" required autofocus style='margin-bottom: 10px;'>

        <input name="health" type="number"  min="0" maxlength="16" class="form-control" placeholder="Health" required style='margin-bottom: 10px;'>

        <input name="agility" type="number" min="0" maxlength="40" class="form-control" placeholder="Agility" required style='margin-bottom: 10px;'>

        <input name="attack" type="number" min="0" maxlength="40" class="form-control" placeholder="Attack" required style='margin-bottom: 10px;'>

        <input name="defence" type="number" min="0" maxlength="40" class="form-control" placeholder="Defence" required style='margin-bottom: 10px;'>

        <input type="submit" value="Add" class="btn btn-primary btn-block">

    </form>

</div>
