<% include __header %>
<h1 align="center">Sign up</h1>

<link rel="stylesheet" type="text/css" href="style.css">
<div>
    <form action="/signup" method="post" style='width:40%;'>

        <input name="username" type="text" maxlength="25" class="form-control" placeholder="Username" required autofocus style='margin-bottom: 10px;'>

        <input name="password" type="password" maxlength="16" class="form-control" placeholder="Password" required style='margin-bottom: 10px;'>

        <input name="first_name" type="text" maxlength="40" class="form-control" placeholder="First name" required style='margin-bottom: 10px;'>

        <input name="last_name" type="text" maxlength="40" class="form-control" placeholder="Last name" required style='margin-bottom: 10px;'>

        <input type="submit" value="Sign up" class="btn btn-primary btn-block">

    </form>
</div>
<% include __footer %>