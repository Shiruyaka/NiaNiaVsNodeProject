<% include __header.ejs%>

<h1>Change password</h1>

<div>

    <form action="/profile/change_passwd?method=PATCH"  method="post" style='width:40%;'>

        <input name="old" type="password" maxlength="25" class="form-control" placeholder="Your old password" required autofocus style='margin-bottom: 10px;'>

        <input name="new" type="password"  min="0" maxlength="16" class="form-control" placeholder="Your new password" required style='margin-bottom: 10px;'>

        <input name="second_new" type="password" min="0" maxlength="40" class="form-control" placeholder="Repeat the new one" required style='margin-bottom: 10px;'>

        <input type="submit" value="Save" class="btn btn-primary btn-block">

    </form>

</div>
