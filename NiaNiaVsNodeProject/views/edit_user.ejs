<% include __header.ejs%>

<h1>Edit user</h1>

<div>

    <form action="/admin/edit_user/<%=user._id%>?method=PATCH" method="post" style='width:40%;'>

        <input name="username" type="text" maxlength="25" class="form-control" value=<%-user.username%> required autofocus style='margin-bottom: 10px;'>

        <input name="first_name" type="text" min="0" maxlength="40" class="form-control" value="<%-user.first_name%>" required style='margin-bottom: 10px;'>

        <input name="last_name" type="text" min="0" maxlength="40" class="form-control" value="<%-user.last_name%>" required style='margin-bottom: 10px;'>

        <input name="role" type="text" min="0" maxlength="40" class="form-control" value="<%-user.role%>" readonly required style='margin-bottom: 10px;'>

        <input type="submit" value="Save" class="btn btn-primary btn-block">

    </form>

</div>
<% include __footer %>